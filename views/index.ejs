<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
  </head>
  <body class="bg-blue-700 text-white">
    <div class="w-full h-36 flex items-center justify-center mb-12 flex-col">

      <h1 class="text-5xl">All Products</h1>
      <a href="/addproduct" class="w-36 bg-blue-900 text-md mt-4 px-4 rounded-md text-center">Add Product</a>
    </div>
    <div class="w-[90vw] flex  justify-center items-center">

      <table id="myTable" class="w-full px-52">
    </div>
      <thead>
          <tr>
              <th>Product Name</th>
              <th>Quantity</th>
              <th>In Stock</th>

          </tr>
      </thead>
      <tbody>
        <% product.forEach(function(e){%>
         <tr>
              <td><a href="/show/<%=e.name%>/data"><%=e.name%></a></td>
              <td><%=e.quantity%></td>
              <td><%=e.instock%></td>

          </tr>
        
        
        <%})%>
         
          
      </tbody>
  </table>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
    <script>
let table = new DataTable('#myTable');
    </script>
  </body>
</html>
